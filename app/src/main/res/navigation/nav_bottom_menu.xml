<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_menu_navigation"
    app:startDestination="@id/bottomNavigationFragment">

    <fragment
        android:id="@+id/bottomNavigationFragment"
        android:name="com.corylab.citatum.fragment.BottomNavigationFragment"
        android:label="BottomNavigationFragment"
        tools:layout="@layout/fragment_bottom_navigation">
        <action
            android:id="@+id/action_bottomNavigationFragment_to_simpleBottomNavigationFragment"
            app:destination="@id/simpleBottomNavigationFragment" />
    </fragment>
    <fragment
        android:id="@+id/simpleBottomNavigationFragment"
        android:name="com.corylab.citatum.fragment.SimpleBottomNavigationFragment"
        android:label="SimpleBottomNavigationFragment"
        tools:layout="@layout/fragment_simple_bottom_navigation">
        <action
            android:id="@+id/action_simpleBottomNavigationFragment_to_bottomNavigationFragment"
            app:destination="@id/bottomNavigationFragment" />
    </fragment>
</navigation>